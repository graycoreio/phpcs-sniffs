{
    "name": "graycore/phpcs-sniffs",
    "description": "A collection of sniffs that we use to keep our code clean.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Graycore\\": "./Graycore/",
            "Graycore\\PhpcsSniffs\\": "./Graycore/",
            "Graycore\\Test\\": "Test/"
        }
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=. .",
        "test:unit": "./vendor/bin/phpunit Test"
    },
    "authors": [
        {
            "name": "Damien Retzinger",
            "email": "damienwebdev@gmail.com"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "^3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}